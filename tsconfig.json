{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2015",
    "lib": ["ES2019"],
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "importHelpers": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__test__/*", "dist", "rollup.config.js", "test-locally"]
}
